<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <div class="w-full min-h-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a class="text-blue-500" href="/">Go Back to Home</a>
        </div>

        <h1 class="text-3xl text-white mb-3">All Users</h1>
        <div class="users flex gap-12 ml-10 mt-5 flex-wrap">
            <%if(users.length==0){%>

                <h1 class="text-zinc-500 text-xl -ml-10">No users yet</h1>
            <%}else{%>
                <%users.forEach(function(user){%>
                        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                            <div class="w-full h-72 rounded-lg bg-zinc-500 overflow-hidden">
                                <img class="w-full h-full object-cover" src="<%=user.image%>" alt="image">
                            </div>
                            <h3 class="text-xl mt-3 tracking-tighter">
                                <%=user.name%>
                            </h3>
                            <h5 class="text-zinc-500">
                                <%=user.email%>
                            </h5>
                            <div class="flex gap-3 mt-10">
                                <a class="text-zinc-200" href="/edit/<%=user._id%>">Edit User</a>
                                <a class="text-red-600" href="/delete/<%=user._id%>">Delete User</a>
                            </div>
                        </div>
                <%})%>
            <%}%>
        </div>

    </div>
</body>

</html>